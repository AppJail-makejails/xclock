INCLUDE options/options.makejail

CMD pw useradd -n xclock -c "Analog and digital clock for X" -d /home/xclock -s /bin/sh
CMD mkdir -p /home/xclock
CMD chown xclock:xclock /home/xclock

PKG xclock

STOP

STAGE create

CMD --local xhost +

STAGE custom:xclock_open

ARG display=:0

ENV DISPLAY=${display}

USER xclock
RUN xclock
